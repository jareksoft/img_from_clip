{
    "id": "com.jpelczar.img_from_clip",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.7",
    "sdk": "org.kde.Sdk",
    "base": "io.qt.qtwebengine.BaseApp",
    "base-version": "6.7",
    "command": "appimg_from_clip",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=home"
    ],
    "separate-locales": false,
    "build-options": {
        "cflags":
            "-Wno-deprecated-declarations -fstack-protector-strong -D_FORTIFY_SOURCE=2",
        "cxxflags":
            "-Wno-deprecated-declarations -fstack-protector-strong -D_FORTIFY_SOURCE=2",
        "ldflags": "-fstack-protector-strong -Wl,-z,relro,-z,now"
    },
    "modules": [
        {
            "name":"lua5.4",
            "no-autogen": true,
            "cleanup": [ "/lib/*.a", "/include", "/bin/lua*" ],
            "buildsystem": "simple",
            "build-commands": [
                "make linux",
                "make install INSTALL_TOP=${FLATPAK_DEST}"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.lua.org/ftp/lua-5.4.7.tar.gz",
                    "sha256": "9fbf5e28ef86c69858f6d3d34eccc32e911c1a28b4120ff3e84aaa70cfbf1e30"
                }
             ]
        },
        {
            "name":"sol2",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DSOL2_BUILD_LUA=OFF"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/ThePhD/sol2.git",
                    "branch": "v3.3.0"
                }
             ]
        },
        {
            "name": "ImgFromClip",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DFLATPAK_DIST=ON"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "./"
                }
            ]
        }
    ]
}
